<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination = "@id/homeFragment">

    <fragment
        android:id="@id/homeFragment"
        android:name="com.mudrax.mudraxcrypto.fragment.homeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@id/marketFragment"
        android:name="com.mudrax.mudraxcrypto.fragment.MarketFragment"
        android:label="fragment_market"
        tools:layout="@layout/fragment_market"
        >
        <action
            android:id="@+id/action_marketFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@id/watchlistFragment"
        android:name="com.mudrax.mudraxcrypto.fragment.WatchlistFragment"
        android:label="fragment_watchlist"
        tools:layout="@layout/fragment_watchlist"
        >
        <action
            android:id="@+id/action_watchlistFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_watchlistFragment_to_detailsFragment2"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_watchlistFragment_to_detailsFragment3"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.mudrax.mudraxcrypto.fragment.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="data"
            app:argType="com.mudrax.mudraxcrypto.models.CryptoCurrency"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>